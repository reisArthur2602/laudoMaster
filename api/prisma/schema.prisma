generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  memberOn  Member[] @relation("UserMembers")
}

model Doctor {
  id             String       @id @default(cuid())
  idMedico       Int?         @unique
  name           String
  organizationId String
  specialty      String?
  createdAt      DateTime     @default(now())
  organization   Organization @relation("OrgDoctors", fields: [organizationId], references: [id], onDelete: Cascade)
  studies        Study[]
}

model Organization {
  id           String               @id @default(cuid())
  name         String
  slug         String               @unique
  createdAt    DateTime             @default(now())
  doctors      Doctor[]             @relation("OrgDoctors")
  equipments   Equipment[]          @relation("OrgEquipments")
  integrations IntegrationSettings?
  invites      Invite[]             @relation("OrgInvites")
  members      Member[]             @relation("OrgMembers")
  patients     Patient[]            @relation("OrgPatients")
  studies      Study[]              @relation("OrgStudies")
}

model Member {
  id             String       @id @default(cuid())
  userId         String
  organizationId String
  role           Role
  createdAt      DateTime     @default(now())
  organization   Organization @relation("OrgMembers", fields: [organizationId], references: [id], onDelete: Cascade)
  user           User         @relation("UserMembers", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
}

model Invite {
  id             String       @id @default(cuid())
  organizationId String
  email          String
  role           Role
  expireAt       DateTime
  organization   Organization @relation("OrgInvites", fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([email, organizationId])
}

model Patient {
  id             String       @id @default(cuid())
  name           String
  cpf            String       @unique
  phone          String?
  birthDate      DateTime?
  organizationId String
  createdAt      DateTime     @default(now())
  organization   Organization @relation("OrgPatients", fields: [organizationId], references: [id], onDelete: Cascade)
  studies        Study[]
}

model Equipment {
  id             String       @id @default(cuid())
  name           String
  modality       String?
  manufacturer   String?
  model          String?
  serialNumber   String?
  location       String?
  organizationId String
  createdAt      DateTime     @default(now())
  organization   Organization @relation("OrgEquipments", fields: [organizationId], references: [id], onDelete: Cascade)
  studies        Study[]
}

model Study {
  id             String            @id @default(cuid())
  patientId      String
  studyId        String?   @unique
  organizationId String
  type        StudyType    @default(ORTHANC)
  equipmentId    String?
  modality       String?
  description    String?
  status         StudyStatus       @default(PENDING)
  doctorId       String?
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  doctor         Doctor?           @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  equipment      Equipment?        @relation(fields: [equipmentId], references: [id])
  organization   Organization      @relation("OrgStudies", fields: [organizationId], references: [id], onDelete: Cascade)
  patient        Patient           @relation(fields: [patientId], references: [id], onDelete: Cascade)
  attachments    StudyAttachment[]
}

model StudyAttachment {
  id        String   @id @default(cuid())
  studyId   String
  filename  String
  mimeType  String
  size      Int
  path      String
  url       String
  createdAt DateTime @default(now())
  study     Study    @relation(fields: [studyId], references: [id], onDelete: Cascade)
}

model IntegrationSettings {
  id              String       @id @default(cuid())
  organizationId  String       @unique
  orthancUrl      String?
  orthancUser     String?
  orthancPassword String?
  ftpBaseUrl      String?
  ftpUser         String?
  ftpPassword     String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
}

enum Role {
  ADMIN
  LAUDO
  TECHNICAL
}

enum StudyStatus {
  PENDING
  REPORTING
  REPORTED
  DELIVERED
}
enum StudyType {
  EXTERNAL
  ORTHANC
}
